    <script>
        function enterSite() {
            // Set age verification cookie/localStorage
            localStorage.setItem('ageVerified', 'true');
            localStorage.setItem('ageVerificationDate', new Date().toISOString());
            
            // Redirect to main theater
            window.location.href = '/';
        }

        function exitSite() {
            // Clear any existing verification
            localStorage.removeItem('ageVerified');
            
            // Redirect away or show message
            alert('You must be 18 or older to access this content.');
            
            // Redirect to a safe site
            window.location.href = 'https://www.google.com';
        }

        // Check if already verified (within 24 hours)
        window.onload = function() {
            const verified = localStorage.getItem('ageVerified');
            const verificationDate = localStorage.getItem('ageVerificationDate');
            
            if (verified === 'true' && verificationDate) {
                const dayAgo = new Date();
                dayAgo.setDate(dayAgo.getDate() - 1);
                
                if (new Date(verificationDate) > dayAgo) {
                    // Still within 24 hour verification window
                    window.location.href = '/';
                }
            }
        };
    </script>
