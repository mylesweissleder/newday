# Production Environment Configuration
# Copy this file to .env and update with your production values

# Application
NODE_ENV=production
PORT=3002
LOG_LEVEL=info

# Security - CRITICAL: Use strong secrets in production
JWT_SECRET=your-super-strong-jwt-secret-at-least-32-characters-long
SITE_PASSWORD=your-site-access-password

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/network_crm_prod"

# OpenAI API (optional - for AI features)
OPENAI_API_KEY=your-openai-api-key

# Email Configuration (optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Resend API (alternative email service)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@yourdomain.com

# Client URLs (for CORS and email links)
CLIENT_URL=https://yourdomain.com

# Performance Optimization
NODE_OPTIONS="--max-old-space-size=2048"

# Security Headers
HELMET_CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; font-src 'self' data:;"